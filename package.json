{
  "name": "inline-out",
  "description": "Extracts all inline scripts into separate files",
  "version": "1.0.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/inline-out/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.ts",
        "echo npm run ban"
      ],
      "pre-push": [
        "npm run unused-deps",
        "npm run secure",
        "npm run license",
        "echo npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": ["src/*.ts", "build/*.js", "!src/*-spec.ts", "!build/*-spec.js"],
  "homepage": "https://github.com/bahmutov/inline-out#readme",
  "keywords": ["cli", "csp", "extract", "extractor", "inline", "script"],
  "license": "MIT",
  "main": "build/",
  "private": false,
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/inline-out.git"
  },
  "scripts": {
    "ban": "ban",
    "build": "tsc --pretty",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "tsc --pretty --noEmit src/*.ts",
    "prelint": "npm run pretty",
    "pretest": "npm run build",
    "pretty": "prettier --write 'src/*.ts'",
    "secure": "nsp check",
    "size":
      "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha build/*-spec.ts",
    "unused-deps": "dependency-check --unused --no-dev ."
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "devDependencies": {
    "@types/mocha": "2.2.44",
    "ban-sensitive-files": "1.9.1",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.1",
    "git-issues": "1.3.1",
    "license-checker": "15.0.0",
    "mocha": "4.0.1",
    "nsp": "3.1.0",
    "pre-git": "3.16.0",
    "prettier": "1.8.2",
    "tslint": "5.8.0",
    "tslint-config-standard": "7.0.0",
    "typescript": "2.6.2"
  }
}
